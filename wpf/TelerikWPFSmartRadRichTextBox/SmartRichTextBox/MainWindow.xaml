<Window x:Class="SmartRichTextBox.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                Title="MainWindow" Height="750" Width="770">
        <Grid>
        <Grid x:Name="radRichTextBoxParent">
            <Grid.Resources>
                <ResourceDictionary>
                    <telerik:FontFamiliesProvider x:Key="FontFamiliesProvider"/>
                    <telerik:EditingContextTypeToBoolConverter x:Key="EditingContextTypeToBoolConverter"/>
                    <telerik:IconSources x:Key="IconSources" DarkBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBox;component/RichTextBoxUI/Images/MSOffice/Dark/" LightBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBox;component/RichTextBoxUI/Images/MSOffice/" ModernBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBox;component/RichTextBoxUI/Images/MSOffice/Modern/"/>
                    <telerik:IconSources x:Key="ShapesIconSources" DarkBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBox;component/RichTextBoxUI/Images/Shapes/Dark/" LightBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBox;component/RichTextBoxUI/Images/Shapes/Light/" ModernBasePath="pack://application:,,,/Telerik.Windows.Controls.RichTextBox;component/RichTextBoxUI/Images/Shapes/Light/"/>
                </ResourceDictionary>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition MaxWidth="780" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <telerik:DocumentRuler>
                    <telerik:RadRichTextBox x:Name="radRichTextBox" IsSelectionMiniToolBarEnabled="True" IsContextMenuEnabled="True" IsSpellCheckingEnabled="True" LayoutMode="Paged"/>
                </telerik:DocumentRuler>
                <GridSplitter Background="{Binding Background, ElementName=TaskPane}" BorderThickness="1 0" Grid.Column="1" HorizontalAlignment="Stretch" Visibility="{Binding Visibility, ElementName=TaskPane}"/>
                <telerik:TaskPane x:Name="TaskPane" AssociatedRichTextBox="{Binding ElementName=radRichTextBox}" Grid.Column="2" HorizontalAlignment="Stretch" MinWidth="265" VerticalAlignment="Stretch"/>
            </Grid>
            <telerik:RadRichTextBoxRibbonUI ApplicationButtonContent="File" BackstageClippingElement="{Binding ElementName=radRichTextBoxParent}" CollapseThresholdSize="50,50" DataContext="{Binding Commands, ElementName=radRichTextBox}">
                <telerik:RadRichTextBoxRibbonUI.Backstage>
                    <telerik:RadRibbonBackstage AutomationProperties.Name="Backstage">
                        <telerik:RadRibbonBackstageItem Header="New" IsSelectable="false" Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/new.png}" AutomationProperties.Name="New Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding NewDocumentCommand}"/>
                        <telerik:RadRibbonBackstageItem Header="Open" IsSelectable="false" Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/open.png}" AutomationProperties.Name="Open Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding OpenDocumentCommand}"/>
                        <telerik:RadRibbonBackstageItem Header="Save" IsSelectable="false" Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/save.png}" AutomationProperties.Name="Save Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}"/>
                        <telerik:RadRibbonBackstageItem Header="Save As" IsDefault="false" Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/saveas.png}">
                            <StackPanel HorizontalAlignment="Stretch" Margin="20,20,0,0" UseLayoutRounding="True">
                                <TextBlock Foreground="#FF5E5E7C" FontFamily="Verdana" FontWeight="ExtraBold" FontSize="18" Text="Save As"/>
                                <Rectangle Fill="Gray" HorizontalAlignment="Left" Height="1" Width="410"/>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="docx" Height="80" AutomationProperties.Name="Word Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/worddoc.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="Word Document"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Save the file as a Word document." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="pdf" Height="80" AutomationProperties.Name="PDF Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/Pdf.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="PDF Document"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Save document as a PDF file." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="html" Height="80" AutomationProperties.Name="HTML Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/html.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="HTML Document"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Save the file as a HTML document." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="rtf" Height="80" AutomationProperties.Name="Rich Text Format" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/Rtf.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="Rich Text Format"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Save document in Rich Text Format." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="txt" Height="80" AutomationProperties.Name="Plain text" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/PlainText.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="Plain text"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Save document in plain text format." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="xaml" Height="80" AutomationProperties.Name="XAML Document" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/Xaml.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="XAML Document"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Save document as a XAML file." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </telerik:RadRibbonBackstageItem>
                        <telerik:RadRibbonBackstageItem Header="Print" IsDefault="true" Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/print.png}" AutomationProperties.Name="Print">
                            <StackPanel HorizontalAlignment="Stretch" Margin="20,20,0,0" UseLayoutRounding="True">
                                <TextBlock Foreground="#FF5E5E7C" FontFamily="Verdana" FontWeight="ExtraBold" FontSize="18" Text="Print"/>
                                <Rectangle Fill="Gray" HorizontalAlignment="Left" Height="1" Width="410"/>
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <telerik:RadRibbonButton BorderBrush="Gray" CornerRadius="3" CommandParameter="Native" Height="80" AutomationProperties.Name="Native Print" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding PrintCommand}" telerik:RadRichTextBoxRibbonUI.ShouldCloseBackstage="True" VerticalContentAlignment="Center" Width="90">
                                        <Image HorizontalAlignment="Center" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=ApplicationMenu/pagesetup.png}" Stretch="None"/>
                                    </telerik:RadRibbonButton>
                                    <StackPanel Margin="20 0 0 0">
                                        <TextBlock Foreground="#FF5E5E7C" FontWeight="ExtraBold" FontSize="18" Text="Native Print"/>
                                        <TextBlock FontFamily="Verdana" FontSize="13" TextWrapping="Wrap" Text="Send the document directly to the default printer without making changes." Width="300"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </telerik:RadRibbonBackstageItem>
                    </telerik:RadRibbonBackstage>
                </telerik:RadRichTextBoxRibbonUI.Backstage>
                <telerik:RadRichTextBoxRibbonUI.ContextualGroups>
                    <telerik:RadRibbonContextualGroup x:Name="TableTools" Header="Table Tools" IsActive="{Binding AssociatedRichTextBox.CurrentEditingContext.Type, ConverterParameter=Table, Converter={StaticResource EditingContextTypeToBoolConverter}, Mode=OneWay}" AutomationProperties.Name="Table Tools"/>
                    <telerik:RadRibbonContextualGroup x:Name="HeaderFooterTools" Header="Header &amp; Footer Tools" IsActive="{Binding AssociatedRichTextBox.CurrentEditingContext.Type, ConverterParameter=HeaderFooter, Converter={StaticResource EditingContextTypeToBoolConverter}, Mode=OneWay}" AutomationProperties.Name="Header and Footer Tools"/>
                    <telerik:RadRibbonContextualGroup x:Name="ShapeFormat" Header="Shape Format" IsActive="{Binding AssociatedRichTextBox.CurrentEditingContext.Type, ConverterParameter=Shape, Converter={StaticResource EditingContextTypeToBoolConverter}, Mode=OneWay}" AutomationProperties.Name="Shape Format"/>
                </telerik:RadRichTextBoxRibbonUI.ContextualGroups>
                <telerik:RadRichTextBoxRibbonUI.QuickAccessToolBar>
                    <telerik:QuickAccessToolBar AutomationProperties.Name="Quick Access">
                        <telerik:RadRibbonButton AutomationProperties.Name="Save" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding SaveCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/save.png}" Size="Small" Text="Save"/>
                        <telerik:RadRibbonSplitButton AutomationProperties.Name="Undo" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding UndoCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/undo.png}" Size="Small" Text="Undo">
                            <telerik:RadRibbonSplitButton.DropDownContent>
                                <telerik:MultipleUndoControl telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding MultipleUndoCommand}"/>
                            </telerik:RadRibbonSplitButton.DropDownContent>
                        </telerik:RadRibbonSplitButton>
                        <telerik:RadRibbonButton AutomationProperties.Name="Redo" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding RedoCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/redo.png}" Size="Small" Text="Redo"/>
                    </telerik:QuickAccessToolBar>
                </telerik:RadRichTextBoxRibbonUI.QuickAccessToolBar>
                <telerik:RadRibbonTab Header="Home">
                    <telerik:RadRibbonGroup Header="Clipboard">
                        <telerik:RadRibbonDropDownButton Command="{Binding PasteCommand}" CollapseToMedium="WhenGroupIsMedium" telerik:ScreenTip.Description="Paste the contents of the Clipboard." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/paste.png}" AutomationProperties.Name="Paste" Size="Large" telerik:ScreenTip.Title="Paste" Text="Paste">
                            <telerik:RadRibbonDropDownButton.DropDownContent>
                                <telerik:PasteOptionsPicker Owner="{Binding AssociatedRichTextBox}"/>
                            </telerik:RadRibbonDropDownButton.DropDownContent>
                        </telerik:RadRibbonDropDownButton>
                        <telerik:RadCollapsiblePanel>
                            <telerik:RadRibbonButton CollapseToSmall="WhenGroupIsMedium" telerik:ScreenTip.Description="Cut the selection and put it on the Clipboard." AutomationProperties.Name="Cut" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding CutCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/cut.png}" Size="Medium" telerik:ScreenTip.Title="Cut" Text="Cut"/>
                            <telerik:RadRibbonButton CollapseToSmall="WhenGroupIsMedium" telerik:ScreenTip.Description="Copy the selection and put it on the Clipboard." AutomationProperties.Name="Copy" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding CopyCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/copy.png}" Size="Medium" telerik:ScreenTip.Title="Copy" Text="Copy"/>
                            <telerik:FormatPainterButton CollapseToSmall="WhenGroupIsMedium" telerik:ScreenTip.Description="Apply the look of a particular selection to other content in the document. &amp;#x0a;&amp;#x0a;To get started:&amp;#x0a;1. Select content with the formatting you like&amp;#x0a;2. Click Format Painter&amp;#x0a;3. Select something else to automatically apply the formatting&amp;#x0a;&amp;#x0a;To apply the formatting in multiple places, double-click Format Painter." AutomationProperties.Name="Format Painter" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeFormatPainterStateCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/FormatPainter.png}" Size="Medium" telerik:ScreenTip.Title="Format Painter" Text="Format Painter"/>
                        </telerik:RadCollapsiblePanel>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup DialogLauncherVisibility="Visible" telerik:ScreenTip.Description="Show the font dialog box." Header="Font" telerik:ScreenTip.Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=FontDialog.png}" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ShowFontPropertiesDialogCommand}" telerik:ScreenTip.Title="Font">
                        <telerik:RadOrderedWrapPanel>
                            <StackPanel Orientation="Horizontal">
                                <telerik:RadRibbonComboBox CanKeyboardNavigationSelectItems="False" CanAutocompleteSelectItems="False" CommandParameter="{Binding SelectedValue, RelativeSource={RelativeSource Self}}" telerik:ScreenTip.Description="Change the font family." IsReadOnly="True" ItemsSource="{Binding RegisteredFonts, Source={StaticResource FontFamiliesProvider}}" MaxDropDownHeight="400" AutomationProperties.Name="Font Family" OpenDropDownOnFocus="True" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeFontFamilyCommand}" telerik:ScreenTip.Title="Font" Width="132"/>
                                <telerik:RadRibbonComboBox CanKeyboardNavigationSelectItems="False" CanAutocompleteSelectItems="False" CommandParameter="{Binding SelectedItem.Tag, RelativeSource={RelativeSource Self}}" telerik:ScreenTip.Description="Change the font size." IsReadOnly="True" IsTextSearchEnabled="False" IsEditable="True" MaxDropDownHeight="400" AutomationProperties.Name="Font Size" OpenDropDownOnFocus="True" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeFontSizeCommand}" telerik:ScreenTip.Title="Font Size" Width="45">
                                    <telerik:RadRibbonComboBoxItem Content="8" Tag="10.67"/>
                                    <telerik:RadRibbonComboBoxItem Content="9" Tag="12"/>
                                    <telerik:RadRibbonComboBoxItem Content="10" Tag="13.34"/>
                                    <telerik:RadRibbonComboBoxItem Content="11" Tag="14.67"/>
                                    <telerik:RadRibbonComboBoxItem Content="12" Tag="16"/>
                                    <telerik:RadRibbonComboBoxItem Content="14" Tag="18.67"/>
                                    <telerik:RadRibbonComboBoxItem Content="16" Tag="21.33"/>
                                    <telerik:RadRibbonComboBoxItem Content="18" Tag="24"/>
                                    <telerik:RadRibbonComboBoxItem Content="20" Tag="26.67"/>
                                    <telerik:RadRibbonComboBoxItem Content="22" Tag="29.33"/>
                                    <telerik:RadRibbonComboBoxItem Content="24" Tag="32"/>
                                    <telerik:RadRibbonComboBoxItem Content="26" Tag="34.67"/>
                                    <telerik:RadRibbonComboBoxItem Content="28" Tag="37.33"/>
                                    <telerik:RadRibbonComboBoxItem Content="36" Tag="48"/>
                                    <telerik:RadRibbonComboBoxItem Content="48" Tag="64"/>
                                    <telerik:RadRibbonComboBoxItem Content="72" Tag="96"/>
                                </telerik:RadRibbonComboBox>
                            </StackPanel>
                            <telerik:RadButtonGroup>
                                <telerik:RadRibbonButton telerik:ScreenTip.Description="Increase the font size." AutomationProperties.Name="Grow Font" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding IncrementFontSizeCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/font-increasesize.png}" Size="Small" telerik:ScreenTip.Title="Grow Font"/>
                                <telerik:RadRibbonButton telerik:ScreenTip.Description="Decrease the font size." AutomationProperties.Name="Shrink Font" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding DecrementFontSizeCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/font-decreasesize.png}" Size="Small" telerik:ScreenTip.Title="Shrink Font"/>
                            </telerik:RadButtonGroup>
                            <telerik:RadButtonGroup>
                                <telerik:RadRibbonButton telerik:ScreenTip.Description="Clear all the formatting from the selection, leaving only the plain text." AutomationProperties.Name="Clear All Formatting" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ClearAllFormattingCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/ClearFormatting16.png}" Size="Small" telerik:ScreenTip.Title="Clear All Formatting"/>
                            </telerik:RadButtonGroup>
                            <telerik:RadButtonGroup>
                                <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Make the selected text bold." AutomationProperties.Name="Bold" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleBoldCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/bold.png}" Size="Small" telerik:ScreenTip.Title="Bold"/>
                                <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Italicize the selected text." AutomationProperties.Name="Italic" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleItalicCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/italic.png}" Size="Small" telerik:ScreenTip.Title="Italic"/>
                                <telerik:RadRibbonSplitButton telerik:ScreenTip.Description="Underline the selected text." IsToggle="True" AutomationProperties.Name="Underline" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleUnderlineCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/underline.png}" telerik:ScreenTip.Title="Underline">
                                    <telerik:RadRibbonSplitButton.DropDownContent>
                                        <telerik:RadGallery Height="210" ItemWidth="156" ItemHeight="26" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeUnderlineDecorationCommand}" ViewportWidth="157">
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline1.png}" Tag="Line"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline2.png}" Tag="DoubleLine"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline3.png}" Tag="ThickLine"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline4.png}" Tag="DottedLine"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline5.png}" Tag="DashedLine"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline6.png}" Tag="DotDashedLine"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline7.png}" Tag="DotDotDashedLine"/>
                                            <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=underline8.png}" Tag="Wave"/>
                                        </telerik:RadGallery>
                                    </telerik:RadRibbonSplitButton.DropDownContent>
                                </telerik:RadRibbonSplitButton>
                                <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Draw a line through the middle of the selected text." AutomationProperties.Name="Strikethrough" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleStrikethroughCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/Strikethrough16.png}" Size="Small" telerik:ScreenTip.Title="Strikethrough"/>
                                <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Create small letters below the text baseline." AutomationProperties.Name="Subscript" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleSubscriptCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/subscript.png}" Size="Small" telerik:ScreenTip.Title="Subscript"/>
                                <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Create small text above the line of text." AutomationProperties.Name="Superscript" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleSuperscriptCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/superscript.png}" Size="Small" telerik:ScreenTip.Title="Superscript"/>
                            </telerik:RadButtonGroup>
                            <telerik:RadButtonGroup>
                                <telerik:FormattingColorPicker AutomaticColor="Transparent" ActiveColor="Yellow" BorderThickness="0" telerik:ScreenTip.Description="Make text look like it was marked with a highlighter pen." Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/highlight.png}" NoColorText="No color" AutomationProperties.Name="Text Highlight Color" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeFontHighlightColorCommand}" telerik:ScreenTip.Title="Text Highlight Color"/>
                                <telerik:FormattingColorPicker ActiveColor="Red" BorderThickness="0" telerik:ScreenTip.Description="Change the text color." Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/FontForeColor.png}" AutomationProperties.Name="Font Color" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeFontForeColorCommand}" telerik:ScreenTip.Title="Font Color"/>
                            </telerik:RadButtonGroup>
                        </telerik:RadOrderedWrapPanel>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup DialogLauncherVisibility="Visible" telerik:ScreenTip.Description="Show the Paragraph dialog box." Header="Paragraph" telerik:ScreenTip.Icon="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=PropertiesDialog.png}" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ShowParagraphPropertiesDialogCommand}" telerik:ScreenTip.Title="Paragraph">
                        <telerik:RadOrderedWrapPanel>
                            <telerik:RadButtonGroup>
                                <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Start a bulleted list." AutomationProperties.Name="Bullets" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleBulletsCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/list-bullets.png}" Size="Small" telerik:ScreenTip.Title="Bullets"/>
                                <telerik:RadRibbonSplitButton Command="{Binding ToggleNumberedCommand}" telerik:ScreenTip.Description="Start a numbered list. Click the arrow to choose different numbered list styles." AutomationProperties.Name="Numbering" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/list-numbered.png}" Size="Small" telerik:ScreenTip.Title="Numbering">
                                    <telerik:RadRibbonSplitButton.DropDownContent>
                                        <StackPanel>
                                            <telerik:RadGroupHeader Content="List Library"/>
                                            <telerik:RadGallery Height="264" ItemWidth="88" ItemHeight="88" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeListStyleCommand}" ScrollViewer.VerticalScrollBarVisibility="Disabled" ViewportWidth="266">
                                                <telerik:RadGalleryItem Image="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=MultilevelListNone.png}" Tag="None"/>
