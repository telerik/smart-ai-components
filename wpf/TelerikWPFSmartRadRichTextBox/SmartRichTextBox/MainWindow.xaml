                    <telerik:RadRibbonGroup Header="Columns">
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Insert a new column." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/InsertTableColumn.png}" AutomationProperties.Name="Insert Column" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding InsertTableColumnCommand}" Size="Large" telerik:ScreenTip.Title="Insert Column" Text="Insert Column"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Add a new column directly to the left of the selected column." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/InsertTableColumnToTheLeft.png}" AutomationProperties.Name="Insert Columns to the Left" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding InsertTableColumnToTheLeftCommand}" Size="Large" telerik:ScreenTip.Title="Insert Columns to the Left" Text="Insert Left"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Add a new column directly to the right of the selected column." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/InsertTableColumnToTheRight.png}" AutomationProperties.Name="Insert Columns to the Right" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding InsertTableColumnToTheRightCommand}" Size="Large" telerik:ScreenTip.Title="Insert Columns to the Right" Text="Insert Right"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Delete the selected column." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/DeleteTableColumns.png}" AutomationProperties.Name="Delete Column" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding DeleteTableColumnCommand}" Size="Large" telerik:ScreenTip.Title="Delete Column" Text="Delete Column"/>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Merge">
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Merge the selected cells into one cell." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/MergeTableCells.png}" AutomationProperties.Name="Merge Cells" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding MergeTableCellsCommand}" Size="Large" telerik:ScreenTip.Title="Merge Cells" Text="Merge Cells"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Unmerge the current merged cell." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/SplitTableCell.png}" AutomationProperties.Name="Unmerge Cell" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding UnmergeTableCellsCommand}" Size="Large" telerik:ScreenTip.Title="Unmerge Cell" Text="Unmerge Cell"/>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Cell Size">
                        <telerik:RadRibbonDropDownButton Command="{Binding ChangeTableColumnsLayoutModeCommand}" CollapseToMedium="WhenGroupIsMedium" telerik:ScreenTip.Description="Automatically resize the column widths based on the size of the text in them or keep the widths with fixed size." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/AutoFit.png}" AutomationProperties.Name="AutoFit or Fixed" Size="Large" telerik:ScreenTip.Title="AutoFit/Fixed" Text="AutoFit">
                            <telerik:RadRibbonDropDownButton.DropDownContent>
                                <StackPanel>
                                    <telerik:RadRibbonButton CommandParameter="AutoFit" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeTableColumnsLayoutModeCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/AutoFItToWindow.png}" Size="Medium" Text="AutoFit to Window"/>
                                    <telerik:RadRibbonButton CommandParameter="Fixed" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeTableColumnsLayoutModeCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/FixedColumnWidth.png}" Size="Medium" Text="Fixed Column Width"/>
                                </StackPanel>
                            </telerik:RadRibbonDropDownButton.DropDownContent>
                        </telerik:RadRibbonDropDownButton>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Alignment">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <telerik:RadToggleButton CommandParameter="Left,Top" Grid.Column="0" telerik:ScreenTip.Description="Align text to the top left corner of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Top Left" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="0" telerik:ScreenTip.Title="Align Top Left">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/LeftTopCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Center,Top" Grid.Column="1" telerik:ScreenTip.Description="Center text and align it to the top of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Top Center" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="0" telerik:ScreenTip.Title="Align Top Center">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/CenterTopCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Right,Top" Grid.Column="2" telerik:ScreenTip.Description="Align text to the top right corner of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Top Right" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="0" telerik:ScreenTip.Title="Align Top Right">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/RightTopCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Left,Center" Grid.Column="0" telerik:ScreenTip.Description="Center text vertically and align it to the left side of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Center Left" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="1" telerik:ScreenTip.Title="Align Center Left">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/LeftMiddleCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Center,Center" Grid.Column="1" telerik:ScreenTip.Description="Center text horizontally and vertically within the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Center" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="1" telerik:ScreenTip.Title="Align Center">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/CenterMiddleCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Right,Center" Grid.Column="2" telerik:ScreenTip.Description="Center text vertically and align it to the right side of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Center Right" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="1" telerik:ScreenTip.Title="Align Center Right">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/RightMiddleCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Left,Bottom" Grid.Column="0" telerik:ScreenTip.Description="Align text to the bottom left corner of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Bottom Left" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="2" telerik:ScreenTip.Title="Align Bottom Left">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/LeftBottomCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Center,Bottom" Grid.Column="1" telerik:ScreenTip.Description="Center text and align it to the bottom of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Bottom Center" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="2" telerik:ScreenTip.Title="Align Bottom Center">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/CenterBottomCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                            <telerik:RadToggleButton CommandParameter="Right,Bottom" Grid.Column="2" telerik:ScreenTip.Description="Align text to the bottom right corner of the cell." IsBackgroundVisible="False" IsTabStop="False" AutomationProperties.Name="Align Bottom Right" Padding="2,2,2,2" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding TableCellContentAlignmentCommand}" Grid.Row="2" telerik:ScreenTip.Title="Align Bottom Right">
                                <Image Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/RightBottomCellAlignment.png}" Stretch="None"/>
                            </telerik:RadToggleButton>
                        </Grid>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Data">
                        <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Mark multiple rows as header rows. If your table spans multiple pages the header rows will appear on every page." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/RepeatTableRow.png}" AutomationProperties.Name="Repeat Header Rows" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleTableRowRepeatOnEveryPageCommand}" Size="Large" telerik:ScreenTip.Title="Repeat Header Rows" Text="Repeat Header Rows"/>
                    </telerik:RadRibbonGroup>
                </telerik:RadRibbonTab>
                <telerik:RadRibbonTab ContextualGroupName="HeaderFooterTools" Header="Design" Width="140">
                    <telerik:RadRibbonGroup Header="Insert">
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Insert the current date or time into the current document." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/InsertDateTime.png}" AutomationProperties.Name="Insert Date and Time" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ShowInsertDateTimeDialogCommand}" Size="Large" telerik:ScreenTip.Title="Insert Date and Time" Text="Date &amp; Time"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Insert page numbers into the document." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/InsertPageNumber.png}" AutomationProperties.Name="Insert Page Number" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding InsertPageFieldCommand}" Size="Large" telerik:ScreenTip.Title="Insert Page Number" Text="Page Number"/>
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Insert block containing formatted programming source code." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/CodeBlock.png}" AutomationProperties.Name="Insert Code Block" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ShowCodeFormattingDialogCommand}" Size="Large" telerik:ScreenTip.Title="Insert Code Block" Text="Code"/>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Navigation">
                        <StackPanel>
                            <telerik:RadRibbonToggleButton telerik:ScreenTip.Description="Link to the previous section so that nthe header and footer in the current section contain the same content as in the previous section." AutomationProperties.Name="Link to Previous" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleHeaderFooterLinkToPreviousCommand}" SmallImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/LinkToPreviousHeaderFooter.png}" Size="Medium" telerik:ScreenTip.Title="Link to Previous" Text="Link to Previous"/>
                        </StackPanel>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Options">
                        <StackPanel>
                            <CheckBox Content="Different First Page" telerik:ScreenTip.Description="Specify a unique header and footer for the first page of the document." telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleDifferentFirstPageHeaderFooterCommand}" telerik:ScreenTip.Title="Different First Page"/>
                            <CheckBox Content="Different Odd &amp; Even Pages" telerik:ScreenTip.Description="Specify that odd-numbered pages should have a different header and footer from even-numbered pages." telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ToggleDifferentOddAndEvenPagesHeaderFooterCommand}" telerik:ScreenTip.Title="Different Odd &amp; Even Pages"/>
                        </StackPanel>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Position">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0" Grid.Row="0" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/HeaderFromTop.png}" Stretch="None" VerticalAlignment="Center"/>
                            <telerik:Label Grid.Column="1" Content=" Header from Top: " IsEnabled="{Binding IsEnabled, ElementName=HeaderAreaMarginNumericUpDown}" Padding="0" Grid.Row="0" VerticalAlignment="Center"/>
                            <telerik:RadNumericUpDown x:Name="HeaderAreaMarginNumericUpDown" Grid.Column="2" telerik:ScreenTip.Description="Specify the height of the header area." IsInteger="true" Minimum="0" NullValue="48" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeSectionHeaderTopMarginCommand}" Grid.Row="0" telerik:ScreenTip.Title="Header Position from Top"/>
                            <Image Grid.Column="0" Margin="0 1 0 0" Grid.Row="1" Source="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=16/FooterFromBottom.png}" Stretch="None" VerticalAlignment="Center"/>
                            <telerik:Label Grid.Column="1" Content=" Footer from Bottom: " IsEnabled="{Binding IsEnabled, ElementName=FooterAreaMarginNumericUpDown}" Margin="0 1 0 0" Padding="0" Grid.Row="1" VerticalAlignment="Center"/>
                            <telerik:RadNumericUpDown x:Name="FooterAreaMarginNumericUpDown" Grid.Column="2" telerik:ScreenTip.Description="Specify the height of the footer area." IsInteger="true" Margin="0 1 0 0" Minimum="0" NullValue="48" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ChangeSectionFooterBottomMarginCommand}" Grid.Row="1" telerik:ScreenTip.Title="Footer Position from Bottom"/>
                        </Grid>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup Header="Close">
                        <telerik:RadRibbonButton telerik:ScreenTip.Description="Close the Header and Footer Mode." LargeImage="{telerik:IconResource IconSources={StaticResource IconSources}, IconRelativePath=32/ExitHeaderFooterEditMode.png}" AutomationProperties.Name="Close Header and Footer" telerik:RadRichTextBoxRibbonUI.RichTextCommand="{Binding ExitHeaderFooterEditModeCommand}" Size="Large" telerik:ScreenTip.Title="Close Header and Footer" Text="Close Header and Footer"/>
                    </telerik:RadRibbonGroup>
                </telerik:RadRibbonTab>
                <telerik:RadRibbonTab ContextualGroupName="ShapeFormat" Header="Shape Format">
                    <telerik:RadRibbonGroup Header="Insert Shapes">
                        <telerik:ShapesRibbonGallery AssociatedRichTextBox="{Binding ElementName=radRichTextBox}"/>
                    </telerik:RadRibbonGroup>
                    <telerik:RadRibbonGroup DialogLauncherCommandParameter="Visible" DialogLauncherCommand="{Binding Commands.ShowTaskPaneCommand, ElementName=radRichTextBox}" DialogLauncherVisibility="Visible" Header="Shape Styles">
                        <StackPanel>
                            <telerik:ShapesColorPicker AssociatedRichTextBox="{Binding ElementName=radRichTextBox}" HorizontalAlignment="Left" SplitButtonImage="{telerik:IconResource IconSources={StaticResource ShapesIconSources}, IconRelativePath=bucket.png}"/>
                            <telerik:ShapesOutlinePicker AssociatedRichTextBox="{Binding ElementName=radRichTextBox}" HorizontalAlignment="Left" SplitButtonImage="{telerik:IconResource IconSources={StaticResource ShapesIconSources}, IconRelativePath=outline.png}"/>
                        </StackPanel>
                    </telerik:RadRibbonGroup>
                </telerik:RadRibbonTab>
            </telerik:RadRichTextBoxRibbonUI>
            <telerik:RadRichTextBoxStatusBar AssociatedRichTextBox="{Binding ElementName=radRichTextBox}" Grid.Row="2"/>
        </Grid>

    </Grid>
</Window>
